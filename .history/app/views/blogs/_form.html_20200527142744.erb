<div class = "flex-row d-flex justify-content-center">
  <div class = "col-md-8">
    <div class= "card mt-5">
      <div class= " card-body">
        <div class= "form-group">
          <%= f.label :title%>
          <%= f.text_field :title, class: 'form-control'%>
        </div>
        <div class= "form-group">
          <%= f.label :content%>
          <%= f.text_area :content, class: 'form-control'%>
        </div>
       
      </div>
    </div>
  </div>
</div>
<%= form_for @blog do |f|%>
 
  <%= f.select :category_id,  Category.all.map {|c|[c.category, c.id]}%>
  <%= f.submit %>
<% end%>
